/*
start localised wind sound at specified thing(s) tag:
*/
function void startWindSound(int thingID){
	PlaySound ( thingID, "WINDHOWL", 0, 0.5, true, ATTN_NORM);
}

/*
wrapper for sector floor/ceiling height changing:
*/
function void changeSectorHeight(int sectorID, int speed, int dist, int planesToMove){
	switch(planesToMove){
		case SECTOR_MVFLOOR:
			log(s:"lowering floor");
			floor_lowerbyvalue(sectorID, speed, dist);
		break;
		
		case SECTOR_MVCEILING:
			log(s:"raising ceiling");
			ceiling_raisebyvalue(sectorID, speed, dist);
		break;
		
		case SECTOR_MVFLOORANDCEILING:
			log(s:"lowering floor and raising ceiling");
			ceiling_raisebyvalue(sectorID, speed, dist);
			floor_lowerbyvalue(sectorID, speed, dist);
		break;
		
		default:
			//do nothing
	}
}

function void floorAndCeilingLowerByValue(int sectorID, int speed, int dist, int planesToMove){
	switch(planesToMove){
		case SECTOR_MVFLOOR:
			log(s:"lowering floor");
			floor_lowerbyvalue(sectorID, speed, dist);
		break;
		
		case SECTOR_MVCEILING:
			log(s:"lowering ceiling");
			ceiling_lowerbyvalue(sectorID, speed, dist);
		break;
		
		case SECTOR_MVFLOORANDCEILING:
			log(s:"lowering floor and ceiling");
			ceiling_lowerbyvalue(sectorID, speed, dist);
			floor_lowerbyvalue(sectorID, speed, dist);
		break;
		
		default:
			//do nothing
	}
}

