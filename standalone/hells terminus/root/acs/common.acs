script 100 ENTER{
	CURRENTLEVEL = GetLevelInfo(LEVELINFO_LEVELNUM);
	//log(i:GetLevelInfo(LEVELINFO_LEVELNUM));
	log(s:"starting external script file 'common' ",i:CURRENTLEVEL);
	if(CURRENTLEVEL == 15){
		//do nothing
		log(s:"Starting MAP15");
		alignSectorCeilings(66,0,16);
	}
	if(CURRENTLEVEL == 16){
		//do nothing
	}
	if(CURRENTLEVEL == 17){
		startWindSound(10);
	}
	if(CURRENTLEVEL == 18){
		/* start wind sound at well of dead souls */
		startWindSound(20);
		randomizeTeleportDestinations();

		/* rotate the demon floor textures to align with corridor*/
		rotateTextures(37, 270, 0);

		/* init  */
		_currentPlatformToLower = 0;	//this is set dynamically in script 2

		log(s:"triggering kill script with world scope data");
		killSecretThings();
	}
	if(CURRENTLEVEL == 31){
		log(s:"starting script file #31");
		
			/*
		kill corresponding monster in MAP18
		See https://zdoom.org/wiki/Scope

		 - We specify the TIDs of the imps in MAP18 (in the corridor area that is common
		to both MAP31 and MAP18).
		 - We declare an array indicating whether we have killed the equivalent imps in
		THIS map
		 - The global 'lookupDeadThings[]' is populated if and when we kill one or more
		 corresponding imps in this map
		*/
		int thingsToKill[3] = {11,12,13};
		bool aliveThings[3] = {1,1,1};

		int count = 3;
		bool exitLoop = 0;
		while(true){
			exitLoop = 1;
			/*
			check each imp is alive. If not, kill corresponding imp in MAP18:
			ThingCount(T_NONE, 4)
			*/
			for(int a=0;a<count; a++){
				if(!(ThingCount(T_NONE, thingsToKill[a]))){
					log(s:"Adding kill flag to global for imp ", i:thingsToKill[a]);
					//ACS_Execute(10,18,thingsToKill[a]);
					lookupDeadThings[a]=thingsToKill[a];	//look these up in MAP18 start script...
					/*
					And indicate which alive thing is now dead...
					*/
					aliveThings[a]=0;
				}
			}

			/*
			see if there are still alive imps. If so,
			continue.
			*/
			for(int b=0;b<count;b++){
				if(aliveThings[b]){
					exitLoop = false;
				}
			}

			/*
			Otherwise, exit the loop:
			*/
			if(exitLoop){
				break;
			}
			delay(35); // check every second.
		}
		log(s:"All dead Dave.");
	}
}

